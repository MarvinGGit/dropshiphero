<nav class="navbar navbar-default nav-custom">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to(root_path, class: "navbar-brand") do %>
          <h1 class="navbar-logo"><strong>DropshipHero</strong></h1>
      <% end %>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <% if logged_in? %>  
            <li class="navbarlink"><%= link_to(products_path) do %>Winning Products<% end %></li>
          <% else %>
          <li><%= link_to(root_path) do %><i class="fa fa-home"></i> Home <% end %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
      <% if !logged_in? %>
        <li><%= link_to "Log in", login_path, class: ""%></li>
        <li><%= link_to "Sign up", signup_path, class: ""%></li>
      <% else %>
        <%= link_to(logout_path, method: :delete) do%><button type="button" class="btn btn-default navbar-btn">Log out</button><% end %>
        <li><%= link_to "Your profile", user_path(current_user), class: ""%></li>
        <% if current_user.admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "New product", new_product_path, class: ""%></li>
                <li><%= link_to "Dashboard", dashboard_path, class: ""%></li>
              </ul>
            </ul>
        <% end %>
        <%end%>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
