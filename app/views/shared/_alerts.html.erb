      <% flash.each do |type, msg| %>
          <% if type == "notice" %>
            <div class="alert alert-success alert-dismissible"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><%= msg %></div>
          <% elsif type == "alert" %>
            <div class="alert alert-danger alert-dismissible"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><%= msg %></div>
          <% else %>
            <div class='alert alert-<%= "#{type}" %> alert-dismissible'><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><%= msg %></div>
          <% end %>
      <% end %>