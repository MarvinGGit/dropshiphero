<div class="row head-section">
  <div class="container">
    <div class="col-md-12" style="vertical-align: middle; margin-bottom: 20px;">
        <h2 class="sales-subheader">95% of Dropshipping Businesses fail after 1 month.</h2>
        <h1 class="sales-header">With <span class="navbar-logo" style="color: #484848; letter-spacing: -2px; font-weight: 600;">DropshipHero</span> you won't</h1>
    </div>
    <div class="col-md-8">
      <%= image_tag("screenshot.png", class: "sales-screenshot img-responsive") %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="sales-price-card center shadowed">
        <h1>Only 14.99$</h1>
        <p class="sales-per-month">per Month</p>
        <h2>7-Day Free Trial</h2>
        <ul>
          <li>Winning Products</li>
          <li>HeroRankâ„¢</li>
          <li>Best Audiences</li>
          <li>Top Suppliers</li>
          <li>Ad Copy</li>
          <li>Analytics</li>
          <li>Updates everyday</li>
        </ul>
      </div>
    
    </div>
     <div class="col-md-8 mobile-margin">
        <h2 class="sales-sign-up-title">Sign up now!</h2>
        <%= form_for(resource, as: resource_name, html:{class: "form-horizontal", role: "form"} ,url: registration_path(resource_name)) do |f| %>
          <%= render 'shared/error_messages', object: resource %>
            <div class="form-group">
              <div class="control-label col-sm-2">
                <%= f.label :email %>
              </div>
              <div class="col-sm-8">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <div class="control-label col-sm-2">
                <%= f.label :password %>
              </div>
              <div class="col-sm-8">
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                <% if @minimum_password_length %>
                  <p class="help-block">(<%= @minimum_password_length %> characters minimum)</p>
                <% end %>
              </div>
            </div>
            <div class="form-group">
              <div class="control-label col-sm-2">
                <%= f.label :password_confirmation %>
              </div>
              <div class="col-sm-8">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12" style="text-align: center;">
                <%= f.submit "Start Your 7-Day Free Trial", class: "btn btn-primary btn-lg sales-submit-button", id: "submit-button" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
</div>

<script type="text/javascript">
  function trackRegistration(){
        fbq('track', 'CompleteRegistration');
  }
</script>