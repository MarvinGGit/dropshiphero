        <%= form_for(resource, as: resource_name, html:{class: "form-horizontal", role: "form"} ,url: registration_path(resource_name)) do |f| %>
          <%= render 'shared/error_messages', object: resource %>
            <div class="form-group">
              <div class="control-label col-sm-2">
                <%= f.label :email %>
              </div>
              <div class="col-sm-8">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <div class="control-label col-sm-2">
                <%= f.label :password %>
              </div>
              <div class="col-sm-8">
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                <% if @minimum_password_length %>
                  <p class="help-block">(<%= @minimum_password_length %> characters minimum)</p>
                <% end %>
              </div>
            </div>
           <!-- <div class="form-group">
              <div class="control-label col-sm-2">
                <%= f.label :password_confirmation %>
              </div>
              <div class="col-sm-8">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>
            </div> -->
            <div class="form-group">
              <div class="col-sm-12" style="text-align: center;">
                <%= f.submit "Start Your Free Trial", class: "btn btn-primary btn-lg sales-submit-button", id: "submit-button" %>
              </div>
            </div>
          </>
        <% end %>
      
