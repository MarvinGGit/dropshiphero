<div class="container">
    <div class='row'>
        <div class='col-xm-12'>
            <%= form_for(@user, html:{class: "form-horizontal", role: "form"}) do |f| %>
                <div class="form-group">
                    <div class="control-label col-sm-2">  
                            <%= f.label :firstname %> 
                    </div>
                    <div class="col-sm-8">
                            <%= f.text_field :firstname, class: "form-control", placeholder: "First name", autofocus: true %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-sm-2">  
                            <%= f.label :lastname %> 
                    </div>
                    <div class="col-sm-8">
                            <%= f.text_field :lastname, class: "form-control", placeholder: "Last name", autofocus: true %>
                    </div>
                </div>
               <div class="form-group">
                    <div class="control-label col-sm-2">  
                            <%= f.label :country %> 
                    </div>
                    <div class="col-sm-8">
                            <%= f.country_select :country, class: "form-control", placeholder: "Country", autofocus: true %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-sm-2">  
                            <%= f.label :username %> 
                    </div>
                    <div class="col-sm-8">
                            <%= f.text_field :username, class: "form-control", placeholder: "Username", autofocus: true %>
                    </div>
                </div>
                <div class="form-group">
                <div class="control-label col-sm-2">  
                        <%= f.label :email %> 
                </div>
                    <div class="col-sm-8">
                        <%= f.email_field :email, class: "form-control", placeholder: "Enter Email" %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-sm-2">  
                            <%= f.label :password %> 
                    </div>
                    <div class="col-sm-8">
                        <%= f.password_field :password, class: "form-control", placeholder: "Enter Password", id: "password" %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label col-sm-2">  
                        <label>Confirm Password</label>
                    </div>
                    <div class="col-sm-8">
                            <input name="password_confirm" class="form-control" placeholder="Retype Password" type="password" id="password_confirm" oninput="check(this)" />
                    </div>
                </div>
                    
                    <script language='javascript' type='text/javascript'>
                        function check(input) {
                            if (input.value != document.getElementById('password').value) {
                                input.setCustomValidity('Password Must be Matching.');
                            } else {
                                // input is valid -- reset the error message
                                input.setCustomValidity('');
                            }
                        }
                    </script>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary btn-lg') %>
                    </div>
                </div>
                <% end %>  
        </div>
    </div>
</div>